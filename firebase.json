{
  "firestore": {
    "database": "(default)",
    "location": "southamerica-east1",
    "rules": "firestone.rules",
    "indexes": "firestone.indexes.json"
  },
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
